---
import "@fontsource/playfair-display";
import "@fontsource/inter";
import "../styles/global.css";
import GlassHeader from "../components/GlassHeader.astro";
import Footer from "../components/Footer.astro";
import DemoLayout from "./DemoLayout.astro";

interface Props {
    title: string;
    description?: string;
}

const { title, description = "Lumina Stay - Quiet Luxury Concept Stay" } =
    Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="icon"
            type="image/svg+xml"
            href={`${import.meta.env.BASE_URL}favicon.svg`}
        />
        <meta name="generator" content={Astro.generator} />
        <meta name="robots" content="noindex, nofollow" />

        <!-- SEO -->
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />

        <!-- Open Graph -->
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:image" content="/images/og-image.webp" />

        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content="/images/og-image.webp" />

        <!-- Non-indexed portfolio demo: intentionally no schema -->
    </head>
    <body
        class="antialiased text-text bg-background flex flex-col min-h-screen"
    >
        <DemoLayout>
            <a
                href="#main-content"
                class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 z-50 bg-white px-4 py-2 text-primary shadow-lg rounded-md"
            >
                Skip to content
            </a>

            <GlassHeader />

            <main id="main-content" class="flex-grow pt-20">
                <slot />
            </main>

            <Footer />
        </DemoLayout>
    </body>
</html>
