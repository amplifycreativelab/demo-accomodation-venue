<form class="space-y-6 max-w-2xl mx-auto" id="enquiry-form">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-2">
            <label
                for="name"
                class="block text-xs uppercase tracking-widest text-text/60"
                >Name</label
            >
            <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full bg-transparent border-b border-gray-300 py-2 focus:outline-none focus:border-accent-bronze transition-colors text-text placeholder-text/30"
                placeholder="Jane Doe"
            />
        </div>
        <div class="space-y-2">
            <label
                for="email"
                class="block text-xs uppercase tracking-widest text-text/60"
                >Email</label
            >
            <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full bg-transparent border-b border-gray-300 py-2 focus:outline-none focus:border-accent-bronze transition-colors text-text placeholder-text/30"
                placeholder="jane@example.com"
            />
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-2">
            <label
                for="check-in"
                class="block text-xs uppercase tracking-widest text-text/60"
                >Check-in</label
            >
            <input
                type="date"
                id="check-in"
                name="check-in"
                class="w-full bg-transparent border-b border-gray-300 py-2 focus:outline-none focus:border-accent-bronze transition-colors text-text text-sm uppercase"
            />
        </div>
        <div class="space-y-2">
            <label
                for="check-out"
                class="block text-xs uppercase tracking-widest text-text/60"
                >Check-out</label
            >
            <input
                type="date"
                id="check-out"
                name="check-out"
                class="w-full bg-transparent border-b border-gray-300 py-2 focus:outline-none focus:border-accent-bronze transition-colors text-text text-sm uppercase"
            />
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-2">
            <label
                for="room"
                class="block text-xs uppercase tracking-widest text-text/60"
                >Preferred Suite</label
            >
            <select
                id="room"
                name="room"
                class="w-full bg-transparent border-b border-gray-300 py-2 focus:outline-none focus:border-accent-bronze transition-colors text-text text-sm"
            >
                <option value="" disabled selected>Select a suite...</option>
                <option value="garden-suite">The Garden Suite</option>
                <option value="river-view-loft">River View Loft</option>
                <option value="terrace-studio">The Terrace Studio</option>
            </select>
        </div>
        <div class="space-y-2">
            <label
                for="guests"
                class="block text-xs uppercase tracking-widest text-text/60"
                >Guests</label
            >
            <select
                id="guests"
                name="guests"
                class="w-full bg-transparent border-b border-gray-300 py-2 focus:outline-none focus:border-accent-bronze transition-colors text-text text-sm"
            >
                <option value="1">1 Guest</option>
                <option value="2" selected>2 Guests</option>
            </select>
        </div>
    </div>

    <div class="space-y-2">
        <label
            for="message"
            class="block text-xs uppercase tracking-widest text-text/60"
            >Special Requests</label
        >
        <textarea
            id="message"
            name="message"
            rows="3"
            class="w-full bg-transparent border-b border-gray-300 py-2 focus:outline-none focus:border-accent-bronze transition-colors text-text placeholder-text/30 resize-none"
            placeholder="Dietary requirements, special occasions, or arrival details..."
        ></textarea>
    </div>

    <div class="pt-4">
        <button
            type="submit"
            class="w-full md:w-auto bg-cta text-white px-10 py-4 rounded-sm uppercase tracking-widest text-xs font-bold hover:bg-opacity-90 transition-all shadow-sm"
        >
            Request Availability
        </button>
    </div>

    <p class="text-xs text-text/40 text-center md:text-left">
        Our concierge will review your request and respond within 4 hours.
    </p>
</form>
