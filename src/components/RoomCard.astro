---
import { Image } from "astro:assets";

interface Props {
    name: string;
    priceRange: string;
    image: ImageMetadata;
    slug: string;
    features?: string[];
}

const { name, priceRange, image, slug } = Astro.props;
---

<article class="group cursor-pointer">
    <a href={`${import.meta.env.BASE_URL}rooms`} class="block">
        <div
            class="aspect-[4/5] bg-neutral-200 mb-4 overflow-hidden rounded-sm relative"
        >
            <Image
                src={image}
                alt={name}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            />
        </div>
        <div class="flex justify-between items-baseline">
            <h3
                class="font-serif text-xl group-hover:text-accent-bronze transition-colors"
            >
                {name}
            </h3>
            <span class="text-sm text-text/60">{priceRange}</span>
        </div>
        <div class="mt-2 text-xs uppercase tracking-wider text-text/50">
            See Details &rarr;
        </div>
    </a>
</article>
